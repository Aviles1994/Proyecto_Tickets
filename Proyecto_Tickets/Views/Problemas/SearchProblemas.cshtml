@model Proyecto_Tickets.Models.TableViewsModels.Buscar

@{
    ViewBag.Title = "SearchProblemas";
    Layout = "~/Views/Shared/_LayoutDiseño.cshtml";
}

<main>
    <div class="div_formulario">


        <table class="table">
            @using (Html.BeginForm("Especifico", "Problemas", FormMethod.Post, new { role = "form", Id = "frm", @Class = " form" }))
            {
                <tr>
                   
                   
                    @Html.AntiForgeryToken() 
                    @Html.ValidationMessage("error", new { @class="text-danger"})
                    <td> @Html.TextBoxFor(d => d.Nombre_Problema, new { placeholder = "Escribe el nombre del problema" })</td>
                    <td>
                        <button type="submit" style="background-color: #008CBA; border-radius:4px; font-size:20px; border-color:#008CBA;"> <img src="~/Imagenes/search.png" alt=""></button>
                    </td>


                </tr>
            }

                <tr>
                    <td>
                        <button style="background-color: #008CBA; border-color: #008CBA; color: white; font-size: 20px; border-radius: 4px;"
                                onclick="location.href='@Url.Content("~/Problemas/SeeProblemas/")'">
                            Ver Todos
                        </button>
                    </td>
                </tr>
</table>
        
    </div>
</main>

@section scripts
{
    <script>

      $(document).ready(function ()
      {
        $('.sidebar-menu').tree();
     
    })
    </script>
}