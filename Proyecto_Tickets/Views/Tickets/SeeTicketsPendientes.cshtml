@model  List<Proyecto_Tickets.Models.TableViewsModels.SeeTicketsPendientes>

@{
    ViewBag.Title = "SeeTicketPendientes";
    Layout = "~/Views/Shared/_LayoutDiseño.cshtml";
}

<main>
    <div class="div_formulario">
        <table class="table_busqueda">
            <tr>
                <th>Número ticket</th>
                <th>Medio de contacto</th>
                <th>Estado</th>
                <th>Prioridad</th>
                <th>Servicio</th>
                <th>Pantalla</th>
                <th>Nombre Usuario</th>
                <th>Nombre Problema</th>
                <th>Descripción Problema</th>
                <th>Acción</th>
            </tr>
            @foreach (var oticket in Model)
            {
            <tr>
                <td>@oticket.idTicket</td>
                <td>@oticket.Nombre_MedioContacto</td>
                <td>@oticket.Nombre_Estado</td>
                <td>@oticket.Nombre_Prioridad</td>
                <td>@oticket.Nombre_Servicio</td>
                <td>@oticket.Nombre_Pantalla</td>
                <td>@oticket.Nombre_Usuario</td>
                <td>@oticket.nombre_problema</td>
                <td>@oticket.descripción_problema</td>
                <td style="width:250px">
                    <button class="btn_Acción" type="submit" onclick="location.href='@Url.Content("~/TicketsOptions/VerMas/" + oticket.idTicket)'"><img src="~/Imagenes/view_more.png"></button>
                    <button class="btn_Acción" type="submit" onclick="location.href='@Url.Content("~/TicketsOptions/SeeHistorial?model.idTicket="+oticket.idTicket)'"> <img src="~/Imagenes/update_user.png" alt=""></button>
                    <button class="btn_Acción" type="submit" onclick="location.href='@Url.Content("~/TicketsOptions/EditEstado/"+oticket.idTicket)'"> <img src="~/Imagenes/update_status.png" alt=""></button>
                    <button class="btn_Acción" type="submit" onclick="location.href='@Url.Content("~/TicketsOptions/AddSolucion?model.idTicket="+oticket.idTicket)'"> <img src="~/Imagenes/add_solution.png" alt=""></button>
                </td>
            </tr>
            }
        </table>
    </div>
</main>



@section scripts
{
    <script>
    $(document).ready(function ()
    {
        $('.sidebar-menu').tree();

    })
    </script>
}